<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
    	<service id="riCard" class="plugins\riCard\RiCard" scope="container">
    		<argument type="service" id="dispatcher"/>
    	</service>
    	<service id="riCard.Price" class="plugins\riCard\Price" scope="container">
    		<argument type="service" id="dispatcher"/>
    	</service>
        <service id="riCard.Card" class="plugins\riCard\Card" scope="prototype">
        	<argument type="service" id="dispatcher"/>
        </service>
        <service id="riCard.Cards" class="plugins\riCard\Cards" scope="prototype">
        	<argument type="service" id="dispatcher"/>
        </service>
        <service id="riCard.CardOrder" class="plugins\riCard\CardOrder" scope="prototype">
        	<argument type="service" id="dispatcher"/>
        	<argument type="service" id="riCard.Cards"/>
        </service>
        <service id="riCard.CardOrders" class="plugins\riCard\CardOrders" scope="container">
        	<argument type="service" id="dispatcher"/>
        </service>
        <service id="riCard.CardPayment" class="plugins\riCard\CardPayment" scope="container">
        	<argument type="service" id="dispatcher"/>
        </service>
        <service id="riCard.CardDiscounts" class="plugins\riCard\CardDiscounts" scope="container">
        	<argument type="service" id="dispatcher"/>
        </service>                
        <service id="riCard.CardDiscount" class="plugins\riCard\CardDiscount" scope="prototype">
        	<argument type="service" id="dispatcher"/>
        </service>                                
    </services>

</container>